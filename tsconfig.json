{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "inlineSources": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "newLine": "lf",
    "noEmitOnError": true,
    "outDir": "dist",
    "declaration": true,
    "typeRoots": ["node_modules/@types", "src"]
  },
  "include": ["src/**/*.ts"]
}
